        <listener class-name="utils.ExtentReportManager"/>
    </listeners>

    <!-- TEST 1: Login -->
    <test name="Login Test">
        <classes>
            <class name="testcases.TC001_LoginTest"/>
        </classes>
    </test>

    <!-- TEST 2: Add Employee -->
    <test name="Add Employee Test">
        <classes>
            <class name="testcases.TC002_AddEmployee"/>
        </classes>
    </test>

    <!-- TEST 3: Edit Employee -->
    <test name="Edit Employee Test">
        <classes>
            <class name="testcases.TC003_EditEmployeeTest"/>
        </classes>
    </test>

    <!-- TEST 4: Search Employee -->
    <test name="Search Employee Test">
        <classes>
            <class name="testcases.TC004_SearchEmployeeTest"/>
        </classes>
    </test>

    <!-- TEST 5: Delete Employee -->
    <test name="Delete Employee Test">
        <classes>
            <class name="testcases.TC005_DeleteEmployeeTest"/>
        </classes>
    </test>

</suite>
